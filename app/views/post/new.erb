<div class="container">
	<% if !@error.nil? %>
		<b><%= @error %></b>
	<% end %>
	<h2>Create New Post</h4>
	<form action="/posts/create" method="POST">
		<h3>Title</h3>
		<input type="text" name="title">
		<h3>Content</h3>
		<input type="text" name="content">
		<h3>Url</h3>
		<input type="text" name="url">
		<input type="submit" value="Submit">
	</form>
</div>